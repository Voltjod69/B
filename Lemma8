\documentclass{article}
\usepackage{amsthm}
% Define theorem-like environments
\newtheorem{theorem}{Theorem}[section] % Numbered within sections \newtheorem{definition}[theorem]{Definition} % Numbered along with theorems \newtheorem{corollary}[theorem]{Corollary} % Numbered along with theorems \newtheorem{lemma}[theorem]{Lemma} % Numbered along with theorems \begin{document}
\section{Introduction}
\begin{theorem}
This is a theorem.
\end{theorem}
\begin{definition}
This is a definition.
\end{definition}
\begin{corollary}
This is a corollary.
\end{corollary} \begin{lemma}
     This is a lemma. \end{lemma}
\section{Another Section} \begin{theorem}
Another theorem. \end{theorem}
\begin{corollary}
This is a corollary. \end{corollary}
\end{document}
    
